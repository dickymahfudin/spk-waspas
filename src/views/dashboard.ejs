<div class="row mb-4">
  <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
    <div class="card">
      <div class="card-header p-3 pt-2">
        <div
          class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute"
        >
          <i class="material-icons opacity-10">apartment</i>
        </div>
        <div class="text-end pt-1">
          <h3 class="text-sm mb-0 text-capitalize">Total Guru</h3>
          <p class="mb-0"><%= waspas.length%></p>
        </div>
      </div>
      <div class="card-footer p-3"></div>
    </div>
  </div>

  <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
    <div class="card">
      <div class="card-header p-3 pt-2">
        <div
          class="icon icon-lg icon-shape bg-gradient-primary shadow-primary text-center border-radius-xl mt-n4 position-absolute"
        >
          <i class="material-icons opacity-10">scale</i>
        </div>
        <div class="text-end pt-1">
          <h3 class="text-sm mb-0 text-capitalize">Total Kriteria</h3>
          <p class="mb-0"><%= kriterias.length%></p>
        </div>
      </div>
      <div class="card-footer p-3"></div>
    </div>
  </div>

  <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
    <div class="card">
      <div class="card-header p-3 pt-2">
        <div
          class="icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl mt-n4 position-absolute"
        >
          <i class="material-icons opacity-10">filter_1</i>
        </div>
        <div class="text-end pt-1">
          <h3 class="text-sm mb-0 text-capitalize">Peringkat Pertama</h3>
          <%const name = waspas.length != 0 ? waspas[0].name : ""%>
          <p class="mb-0"><%= name%></p>
        </div>
      </div>
      <div class="card-footer p-3"></div>
    </div>
  </div>
</div>

<% if(status) { %>
<div class="card table-responsive p-0">
  <div class="card-body">
    <div class="row">
      <h5>Hasil Metode Waspas</h5>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Ranking</th>
            <th scope="col">Name</th>
            <th scope="col">Nilai</th>
          </tr>
        </thead>
        <tbody>
          <% waspas.forEach((e,i)=>{ %>
          <tr>
            <td><%=i+1%></td>
            <td><%=e.name%></td>
            <td><%=e.result%></td>
          </tr>
          <%})%>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% } else{ %>
<h1>Harap Lakukan Penilaian</h1>
<% } %> <% const toastSuccess=messages.success %> <% const toastError=messages.error %>
<script>
  $(document).ready(function () {
    const toastSuccess = '<%= toastSuccess %>';
    const toastError = '<%= toastError %>';
    toastSuccess != '' && notification('success', toastSuccess);
    toastError != '' && notification('error', toastError);
  });
</script>
